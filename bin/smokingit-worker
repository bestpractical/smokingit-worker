#!/usr/bin/env perl

use strict;
use warnings;
use lib 'lib';
use Smokingit::Worker;
use Getopt::Long;

my $jobs    = 5;
my $repos   = "repos";

my $host    = "localhost";
my $port    = 5672;
my $user    = "guest";
my $pass    = "guest";
my $vhost   = "/";

GetOptions(
    "jobs|j=i",                   \$jobs,
    "repo-path|repos|r=s",        \$repos,
    "host|h=s",                   \$host,
    "port|p=i",                   \$port,
    "user|U=s",                   \$user,
    "password|pass|P=s",          \$pass,
) or die "Invalid options";

die "Repository path $repos isn't writable!\n" unless -w $repos;

my $worker = Smokingit::Worker->new(
    max_jobs    => $jobs,
    repo_path   => $repos,

    host        => $host,
    port        => $port,
    user        => $user,
    pass        => $pass,
    vhost       => $vhost,
);
$worker->run;
